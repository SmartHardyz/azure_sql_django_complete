<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="FastCgiModule" scriptProcessor="D:\home\site\wwwroot\env\Scripts\python.exe|D:\home\site\wwwroot\env\Lib\site-packages\wfastcgi.py" resourceType="Unspecified" requireAccess="Script" />
    </handlers>
    <rewrite>
      <rules>
        <rule name="Static Files" stopProcessing="true">
          <match url="^(media|admin|static)/" />
          <action type="Rewrite" url="http://127.0.0.1:5000{REQUEST_URI}" />
        </rule>
        <rule name="Django" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="http://127.0.0.1:5000{REQUEST_URI}" />
        </rule>
      </rules>
    </rewrite>
    <httpPlatform processPath="D:\home\site\wwwroot\env\Scripts\python.exe" arguments="D:\home\site\wwwroot\env\Lib\site-packages\wfastcgi.py --port %HTTP_PLATFORM_PORT%">
      <environmentVariables>
        <environmentVariable name="PYTHONPATH" value="D:\home\site\wwwroot" />
        <environmentVariable name="DJANGO_SETTINGS_MODULE" value="azure_project.settings" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>
